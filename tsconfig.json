{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "allowImportingTsExtensions": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "module": "preserve",
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,
    
    /* The code runs in the DOM */
    "lib": ["es2022", "dom", "dom.iterable"],

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
    },
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
