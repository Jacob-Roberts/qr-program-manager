{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "files": {
    "ignore": [
      "tests/setup/setup-test-env.ts",
      "./node_modules",
      "**/bun.lockb",
      "./coverage",
      "./.next/",
      "./out/",
      "**/next-env.d.ts",
      "./build",
      "**/.DS_Store",
      "**/*.pem",
      "**/.env",
      "**/.env*.local",
      "**/.vercel",
      "**/*.tsbuildinfo",
      "**/certificates",
      "**/playwright-report"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": { "enabled": true },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "style": {
        "noNamespace": "error",
        "useConsistentArrayType": {
          "level": "warn",
          "options": {
            "syntax": "generic"
          }
        },
        "useForOf": "error",
        "noUnusedTemplateLiteral": "off",
        "noArguments": "error",
        "noVar": "error",
        "useConst": "error"
      },
      "suspicious": {
        "noEmptyBlockStatements": "warn",
        "noExplicitAny": "warn",
        "useAwait": "warn"
      }
    },
    "ignore": [
      "e2e/tests-examples/demo-todo-app.spec.ts",
      "tests-examples/demo-todo-app.spec.ts"
    ]
  },
  "overrides": [
    {
      "include": ["**/tsconfig.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    }
  ]
}
